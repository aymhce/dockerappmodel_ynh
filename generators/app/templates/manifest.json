{
    "name": "<%= beautifulName %>",
    "id": "<%= idName %>",
    "url": "<%= urlApp %>",
    "packaging_format": 1,
    "description": {
        "en": "<%= enDescription %>",
        "fr": "<%= frDescription %>"
    },
    "version": "1.0",
    "license": "GNU GPL",
    "maintainer": {
        "name": "<%= authorName %>",
        "email": "<%= authorEmail %>"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "services": [
        "nginx"
     ],
    "multi_instance": true,
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for <%= beautifulName %>",
                    "fr": "Choisissez un domaine pour <%= beautifulName %>"
                },
                "example": "app.domain.org"
            }<% if (defaultPathOption != "") { %>,
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for <%= beautifulName %>",
                    "fr": "Choisissez un chemin pour <%= beautifulName %>"
                },
                "example": "/mypath",
                "default": "/<%= defaultPathOption %>"
            }<% } %><% if (secureAccessOption) { %>,{
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Could non member access application ?",
                    "fr": "Une personne non membre peut elle accéder à l'application ?"
                },
                "default": <% if (forceSecureAccess) { %>false<% } else { %>true<% } %>
            }<% } %><% if (adminUserOption) { %>,{
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the <%= beautifulName %> administrator (must be an existing YunoHost user)",
                    "fr": "Choisissez l'administrateur <%= beautifulName %> (doit etre un utilisateur Yunohost existant)"
                },
                "default": "homer"
            }<% } %>
        ]
    }
}
